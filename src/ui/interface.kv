#:import utils kivy.utils

Interface:

<Interface>:
    orientation: "vertical"
    spacing: 20
    padding: 30

    # draws background color
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#282828')
        Rectangle:
            size: self.size
            pos: self.pos    
    
    BoxLayout:
        orientation: "horizontal"
        vertical_align: "center"
        size_hint: 1, .10

        Image:
            source: "assets/icons/logo.png"
            size_hint: None, None
            size: "48dp", "48dp"

        Label:
            text: "TCPlayer"
            text_size: self.size
            valign: "center"
            halign: "left"
            font_name: "../assets/fonts/Inter-Bold"
            font_size: 40
            padding_x: "24dp"

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            id: player_main_block
            orientation: "vertical"

            InputLabel:
                text: "Input text"
                id: input_label

            TextInput:
                background_color: utils.get_color_from_hex('#5e5e5e')
                foreground_color: utils.get_color_from_hex('#FFFFFF')
                background_normal: ''
                text: root.text_input
                on_text: root.set_text(self.text)
                id: main_input

        BoxLayout:
            size_hint: None, 1
            width: 20

        BoxLayout:
            orientation: "vertical"

            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, None
                height: 72

                BoxLayout:
                    padding: "8dp"
                    orientation: "vertical"

                    InputLabel:
                        text: "Instrument"
                    NumberInputs:
                        text: root.instrument_input
                        on_text: root.set_instrument(self.text)
                        id: instrument_input
                    
                
                BoxLayout:
                    padding: "8dp"
                    orientation: "vertical"

                    InputLabel:
                        text: "BPM"
                    NumberInputs:
                        text: root.bpm_input
                        on_text: root.set_bpm(self.text)
                        id: bpm_input

            BoxLayout:
                orientation: "vertical"
                padding: 8

                InputLabel:
                    text: "Select from file"

                FileChooserListView:
                    canvas.before:
                        Color:
                            rgb: .4, .5, .5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    id: file
                    on_selection: root.on_file_selected(self.selection) if len(self.selection) == 1 else ''

            # separator (maybe fix later)
            BoxLayout:
                size_hint: 1, None
                height: 16
            
            BoxLayout
                size_hint: 1, None
                height: 40
                Button:
                    text: "Compose and play"
                    font_name: "../assets/fonts/InterDisplay-Light.ttf"
                    background_normal: ''
                    background_color: rgba("#D49C2D")
                    color: 0, 0, 0, 1
                    font_size: 20
                    on_press: app.generate_symphony()
                    id: main_button

# ---------------------
# modular blocks
# ---------------------

<NumberInputs@TextInput>:
    background_color: utils.get_color_from_hex('#5e5e5e')
    foreground_color: utils.get_color_from_hex('#FFFFFF')
    background_normal: ''
    input_type: "number"
    multiline: False
    size_hint: 1, None
    height: 32


<InputLabel@Label>:
    size_hint: 1, None
    height: 32
    text_size: self.size
    halign: "left"
    valign: "top"
    color: 1, 1, 1, 1
    font_size: "16dp"
    padding_y: "8dp"
    font_name: "../assets/fonts/InterDisplay-Light.ttf"

