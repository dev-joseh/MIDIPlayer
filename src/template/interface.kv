#:import utils kivy.utils

BoxLayout:
    orientation: 'vertical'
    padding: 30
    spacing: 20

    canvas:
        Color:
            rgb: utils.get_color_from_hex('#282828')
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'horizontal'
        horizontal_align: 'left'
        size_hint_y: 1

        Image:
            size_hint_x: 0.0
            source: 'assets/icons/logo.png'

        Label:
            size_hint_x: 0.0
            text: '              TCPlayer'
            font_name: "Inter-Bold"
            font_size: 48

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 6

        Label:
            text: 'Input text'
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            font_size: 16
            font_name: "Inter-Regular"
            size_hint_y: 0.2

        TextInput:
            background_color: utils.get_color_from_hex('#4D4D4D')
            background_normal: ''
            foreground_color: utils.get_color_from_hex('#FFFFFF')
            multiline: True
            size_hint_y: 0.8
            id: text

    BoxLayout:
        orientation: 'horizontal'
        spacing: 20
        size_hint_y: 2

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Instrument'
                text_size: self.size
                halign: 'left'
                font_name: "Inter-Regular"
                valign: 'middle'
                font_size: 16
                size_hint_y: 0.3
                
            TextInput:
                background_color: utils.get_color_from_hex('#4D4D4D')
                background_normal: ''
                multiline: False
                foreground_color: utils.get_color_from_hex('#FFFFFF')
                id: instrument
                size_hint_y: 0.7

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'BPM'
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                font_name: "Inter-Regular"
                font_size: 16
                size_hint_y: 0.3
                
            TextInput:
                background_color: utils.get_color_from_hex('#4D4D4D')
                background_normal: ''
                multiline: False
                foreground_color: utils.get_color_from_hex('#FFFFFF')
                id: bpm
                size_hint_y: 0.7

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1

        Button:
            text: 'Compose and play'
            background_normal: ''
            background_color: rgba("#D49C2D")
            font_size: 20
            font_name: "Inter-Medium"
            color: 0, 0, 0, 1
            on_press: app.generate()
            id: main_button